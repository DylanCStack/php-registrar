{{ include('base.html.twig') }}

<body>
    <div class="container">
        <h1>University registrar</h1>

        {% if courses is not empty %}
        <h3>Courses</h3>
        <ul>
            {% for course in courses %}
            <li><a href="/course/{{course.getId}}">{{course.getName}}</a></li>
            {% endfor %}
        </ul>
        {% else %}
        <p>There are no courses yet.</p>
        {% endif %}

        <form  action="/" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name"  class="form-control">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" name="description" class="form-control">
            </div>
            <div class="form-group">
                <label for="prof-name">Profesor Name</label>
                <input type="text" name="prof-name" class="form-control">
            </div>
            <div class="form-group">
                <label for="units">Units</label>
                <input type="text" name="units" class="form-control">
            </div>
            <button type="submit" class="btn btn-lg btn-success" name="button">Add Course</button>
        </form>
        {% if students is not empty %}
        <h3>Students</h3>
        <ul>
            {% for student in students %}
            <li><a href="/student/{{student.getId}}">{{student.getFirstName}} {{student.getLastName}}</a></li>
            {% endfor %}
        </ul>
        {% else %}
        <p>There are no students yet.</p>
        {% endif %}
        <form  action="/student-add" method="post">
            <div class="form-group">
                <label for="first-name">First Name</label>
                <input type="text" name="first-name"  class="form-control">
            </div>
            <div class="form-group">
                <label for="last-name">Last Name</label>
                <input type="text" name="last-name" class="form-control">
            </div>

            <button type="submit" class="btn btn-lg btn-success" name="button">Add Course</button>
        </form>
    </div>
</body>
